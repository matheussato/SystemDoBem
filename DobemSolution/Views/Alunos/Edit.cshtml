@model DoBemSolution.Models.Aluno

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Aluno</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAluno" />
            <div class="form-group">
                <label asp-for="RegistroAluno" class="control-label"></label>
                <input asp-for="RegistroAluno" class="form-control" />
                <span asp-validation-for="RegistroAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeAluno" class="control-label"></label>
                <input asp-for="NomeAluno" class="form-control" />
                <span asp-validation-for="NomeAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAluno" class="control-label"></label>
                <input asp-for="EmailAluno" class="form-control" />
                <span asp-validation-for="EmailAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaAluno" class="control-label"></label>
                <input asp-for="SenhaAluno" class="form-control" />
                <span asp-validation-for="SenhaAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTurma" class="control-label"></label>
                <select asp-for="IdTurma" class="form-control" asp-items="ViewBag.IdTurma"></select>
                <span asp-validation-for="IdTurma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-outline-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
