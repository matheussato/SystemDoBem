@model IEnumerable<DoBemSolution.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}


<div class="row mb-1">
    <h1 class="col-10">Feedbacks</h1>
    <a class="btn btn-dark col-2 h-100" asp-action="Create">Criar Novo</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estrelas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autorizacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estrelas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autorizacao)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.id"><i class="fa fa-info-circle"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
