    };
}

<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < feedbacks.Count(); i++)
            {
                <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>

        <!-- Slides do Carrossel -->
        <div class="carousel-inner">
            @for (var i = 0; i < feedbacks.Count(); i++)
            {
                var feedback = feedbacks.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@listaDeImagens.ElementAtOrDefault(i)"
                         class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>@feedback.nome</h3>
                        <h5>@feedback.Curso.NomeCurso</h5>
                        <h5>@feedback.texto</h5>
                        <div>
                            @for (var j = 0; j < feedback.estrelas; j++)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <style>
                .button {
                    color: white;
                }
            </style>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <style>
                .button {
                    color: white;
                }
            </style>
        </a>
    </div>
</div>