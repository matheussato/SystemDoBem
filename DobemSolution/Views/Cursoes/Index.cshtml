@model IEnumerable<DoBemSolution.Models.Curso>

@{
    ViewData["Title"] = "Index";
}


<div class="row mb-1">
    <h1 class="col-10">Cursos</h1>
    <a class="col-2 h-100 btn btn-dark" asp-action="Create">Cadastrar</a>
</div>
<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card border-dark shadow mb-3">
            <div class="card-header bg-dark text-light text-center" style="font-weight: 700;">
                @Html.DisplayFor(modelItem => item.NomeCurso)
            </div>
            <div class="card-body">
                <p>Carga Horária: @Html.DisplayFor(modelItem => item.CargaHorariaCurso)</p>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdCurso"><i class="fa fa-edit"></i></a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.IdCurso"><i class="fa fa-info-circle"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCurso"><i class="fa fa-trash"></i></a>
            </div>
        </div>
    }
</div>

