@model IEnumerable<DoBemSolution.Models.Turma>

@{
    ViewData["Title"] = "Index";
}

<div class="row mb-1">
    <h1 class="col-10">Turmas</h1>
    <a class="col-2 h-100 btn btn-dark" asp-action="Create">Criar Nova</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Encerramento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encerramento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.CargaHorariaCurso)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdTurma"><i class="fa fa-edit"></i></a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.IdTurma"><i class="fa fa-info-circle"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdTurma"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
