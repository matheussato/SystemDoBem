@model IEnumerable<DoBemSolution.Models.Turma>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Encerramento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encerramento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.CargaHorariaCurso)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTurma">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTurma">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTurma">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
